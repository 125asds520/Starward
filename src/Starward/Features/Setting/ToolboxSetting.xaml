<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="Starward.Features.Setting.ToolboxSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Starward.Features.Setting"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">


    <GridView ItemsSource="{x:Bind ToolboxItems}" SelectionMode="None">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="local:ToolboxItem">

                <Button Width="180"
                        Height="220"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Click="Button_Click">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <FontIcon HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  FontSize="40"
                                  Glyph="{x:Bind Icon}" />
                        <Image Width="40"
                               Height="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Source="{x:Bind Image}" />

                        <TextBlock Grid.Row="1"
                                   FontWeight="Bold"
                                   Text="{x:Bind Name}"
                                   TextWrapping="Wrap" />

                        <TextBlock Grid.Row="2"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{x:Bind Description}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap" />
                    </Grid>
                </Button>

            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>


</UserControl>
